{% extends 'base.html.twig' %}

{% block title %}Contents index{% endblock %}

{% block body %}
    <h1>Contents index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TitleContent</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for content in contents %}
            <tr>
                <td>{{ content.id }}</td>
                <td>{{ content.titleContent }}</td>
                <td>{{ content.content }}</td>
                <td>
                    <a href="{{ path('contents_show', {'id': content.id}) }}">show</a>
                    <a href="{{ path('contents_edit', {'id': content.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contents_new') }}">Create new</a>
{% endblock %}
