{% extends 'base.html.twig' %}

{% block title %}Pages index{% endblock %}

{% block body %}
    <h1>Pages index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Creation</th>
                <th>Summary</th>
                <th>TitlePage</th>
                <th>ImagePages</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td>{{ page.creation ? page.creation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ page.summary }}</td>
                <td>{{ page.titlePage }}</td>
                <td>{{ page.imagePages }}</td>
                <td>
                    <a href="{{ path('pages_show', {'id': page.id}) }}">show</a>
                    <a href="{{ path('pages_edit', {'id': page.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pages_new') }}">Create new</a>
{% endblock %}
